<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_back"
    android:padding="10dp"
    android:orientation="horizontal" >

    

    <RelativeLayout
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

			<ImageView
		        android:id="@+id/shop_poster"
		        android:layout_width="120dp"
		        android:layout_height="90dp"
		        android:layout_marginRight="5dp" />
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shop_poster"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/shop_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shop_poster" 
                android:layout_below="@id/shop_name"/>

            <TextView
                android:id="@+id/shop_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/shop_poster"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shop_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/shop_left_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_left_time"
                android:layout_alignParentRight="true"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/shop_go_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:background="@drawable/button_click"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp" />
    </RelativeLayout>
</LinearLayout>