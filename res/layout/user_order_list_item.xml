<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_back"
    android:padding="10dp"
    android:orientation="horizontal" >

    

    <RelativeLayout
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

			<ImageView
		        android:id="@+id/ordershop_poster"
		        android:layout_width="120dp"
		        android:layout_height="90dp"
		        android:layout_marginRight="5dp" />
            <TextView
                android:id="@+id/ordershop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ordershop_poster"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ordershop_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ordershop_poster" 
                android:layout_below="@id/ordershop_name"/>

            <TextView
                android:id="@+id/ordershop_leftmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/ordershop_poster"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/ordershop_lefttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ordershop_leftmoney"
                android:layout_toRightOf="@id/ordershop_poster"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/head_yellow"
                android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>