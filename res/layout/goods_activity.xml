<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">
    <RelativeLayout
        android:id="@+id/headRelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/head_yellow"
            android:orientation="horizontal">
        <Button
                android:id="@+id/retButton_GoodsActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/retbutton"
                android:background="@android:color/transparent"
                />
        <TextView 
            android:id="@+id/defaultorderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaultorder"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/defaultorderText"
            android:layout_centerVertical="true"
            android:src="@drawable/arrowdown"
            android:background="@android:color/transparent"
            android:visibility="invisible"/>
    </RelativeLayout>
    

	<RelativeLayout 
	    android:id="@+id/goodsRelativeLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:background="@color/bottomGray"
	    android:padding="5dp">
        
	    
	    <ImageView 
	        android:id="@+id/gouwucheImage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/gouwuche"
	        android:layout_centerVertical="true"/>
	    <TextView
	        android:id="@+id/totalNum"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/gouwucheImage"
	        android:layout_centerVertical="true"
	        />
	    
	    <Button
                android:id="@+id/storeBuyBegin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/white"
                android:text="@string/storebuybegintext"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                />
        <View
            android:id="@+id/faqicoudanView"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/storeBuyBegin"
                android:layout_centerVertical="true"
                android:background="@android:color/white"
                />
        <Button
	        android:id="@+id/loadNext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/faqicoudanView"
	        android:layout_marginRight="15dp"
	        android:layout_centerVertical="true"
	        android:padding="5dp"
	        android:text="下一页"
	        android:textSize="15sp"
	        android:background="@drawable/button_click"/>
        <Button
	        android:id="@+id/loadPre"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/loadNext"
	        android:text="上一页"
	        android:layout_marginRight="15dp"
	        android:layout_centerVertical="true"
	        android:padding="5dp"
	        android:textSize="15sp"
	        android:background="@drawable/button_click"
	        />
        
	</RelativeLayout>

	<ListView
            android:id="@+id/goodsList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/goodsRelativeLayout"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false" 
            android:divider="@color/divider"
            android:listSelector="#00000000"
            android:cacheColorHint="#00000000"
            android:layout_below="@id/headRelativeLayout">
    </ListView>
</RelativeLayout>